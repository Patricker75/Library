@page
@model Library.Pages.Rooms.EditModel
@{
    @using Library.Data;
}

<h4>Edit Room</h4>
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="Room.ID" />

    <div class="form-group">
        <label asp-for="Room.Location" class="control-label">Location:</label>
        <input asp-for="Room.Location" class="form-control"/>
        <span asp-validation-for="Room.Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Room.RoomType" class="control-label">Room Type:</label>
        <select asp-for="Room.RoomType" asp-items="Html.GetEnumSelectList<RoomType>()" class="form-control"></select>
        <span asp-validation-for="Room.RoomType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Room.IsAvailable" class="control-label">Available:</label>
        <input asp-for="Room.IsAvailable" />
        <span asp-validation-for="Room.RoomType" class="text-danger"></span>
    </div>

    <input type="submit" value="Save Edit" class="btn btn-primary" />

    </form>
<div>
    <a asp-page="Index">Back to List</a>
</div>
