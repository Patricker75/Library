@page
@model Library.Pages.Rooms.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.ID" />
            <div class="form-group">
                <label asp-for="Room.Location" class="control-label"></label>
                <input asp-for="Room.Location" class="form-control" />
                <span asp-validation-for="Room.Location" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Room.IsAvailable" /> @Html.DisplayNameFor(model => model.Room.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomType" class="control-label"></label>
                <input asp-for="Room.RoomType" class="form-control" />
                <span asp-validation-for="Room.RoomType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
