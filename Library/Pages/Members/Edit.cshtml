@page
@model Library.Pages.Members.EditModel
@{
}

<form method="post">
    <input type="hidden" name="memberID" value="@Model.ID" />

    <label for="FirstName">First Name:</label>
    <input type="text" name="FirstName" value="@Model.FirstName" />

    <br />

    <label for="MiddleName">Middle Name:</label>
    <input type="text" name="MiddleName" value="@Model.MiddleName" />

    <br />

    <label for="LastName">Last Name:</label>
    <input type="text" name="LastName" value="@Model.LastName" />

    <br />

    <label for="Phonenumber">Phone Number:</label>
    <input type="text" name="Phonenumber" value="@Model.PhoneNumber" />

    <br />

    <label for="Address">Address:</label>
    <input type="text" name="Address" value="@Model.Address" />

    <br />

    <label for="gender">Gender:</label>
    <select name="gender" value="@Model.Gender" asp-for="@Model.Gender">
        <option selected="selected" hidden="hidden">Select A Device Type</option>
        <option value="0">Male</option>
        <option value="1">Female</option>
        <option value="2">Other</option>
    </select>

    <br />

    <label for="BirthDate">Birth Date:</label>
    <input type="date" name="BirthDate" asp-for="@Model.BirthDate" />

    <br />

    <input type="submit" value="Edit Member" class="btn btn-primary" />

</form>