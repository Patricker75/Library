@page
@model Library.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Members";
}

<h1>Library Members</h1>

<form method="post">

<label for="Username">Username:</label>
<input type="text" name="Username" value="@Model.Username" />
<br />
 <label for="Password">Password:</label>
 <input type="text" name="Password" value="@Model.Password" />
 <br />
<label for="FirstName">First Name:</label>
<input type="text" name="FirstName" value="@Model.FirstName" />
<br />
<label for="MiddleName">Middle Name:</label>
<input type="text" name="MiddleName" value="@Model.MiddleName" />
<br />
<label for="LastName">Last Name:</label>
<input type="text" name="LastName" value="@Model.LastName" />
<br />
<label for="Phonenumber">Phone Number:</label>
<input type="text" name="Phonenumber" value="@Model.PhoneNum" />
<br />
<label for="Address">Address:</label>
<input type="text" name="Address" value="@Model.Address" />
<br />
<label for="gender">Gender :</label>
<select name="gender" value="@Model.Gender" asp-for="@Model.Gender">
    <option selected="selected" hidden="hidden">Select A Device Type</option>
    <option value="0">Male</option>
    <option value="1">Female</option>
    <option value="2">Other</option>
</select>

<br />
    <label for="BirthDate">BirthDate:</label>
    <input type="date" name="BirthDate" value="@Model.BirthDate" />
<br />
    <label for="JoinDate">JoinDate:</label>
    <input type="date" name="JoinDate" value="@Model.JoinDate" />
<br />
   <label for="membertype">Member Type :</label>
    <select name="membertype" asp-for="@Model.MemberType">
    <option selected="selected" hidden="hidden">Select A Member Type</option>
    <option value="0">Student</option>
    <option value="1">Proffesional</option>
    </select>

<br />
<input type="submit" value="Create" class="btn btn-primary" />

</form>

