@page
@model Library.Pages.Employees.AddModel
@{
}

<form method="post">
    <label for="username">Username:</label>
    <input type="text" name="username" value="@Model.Username" />

    <br />

    <label for="password">Password:</label>
    <input type="password" name="password" value="@Model.Password" />

    <br />

    <label for="firstname">First Name:</label>
    <input type="text" name="firstname" value="@Model.FirstName" />

    <br />

    <label for="middleinitial">Middle Name:</label>
    <input type="text" name="middleinitial" value="@Model.MiddleInitial" />

    <br />

    <label for="lastname">Last Name:</label>
    <input type="text" name="lastname" value="@Model.LastName" />

    <br />

    <label for="phonenumber">Phone Number:</label>
    <input type="tel" name="phonenumber" value="@Model.PhoneNumber">

    <br />

    <label for="address">Address:</label>
    <input type="text" name="address" value="@Model.Address" />

    <br />

    <label for="gender">Gender:</label>
    <select name="gender" asp-for="@Model.Gender">
        <option selected="selected" hidden="hidden">Select a Gender</option>
        <option value="0">Male</option>
        <option value="1">Female</option>
        <option value="2">Other</option>
    </select>

    <br />

    <label for="birthdate">Birth Date:</label>
    <input type="date" name="birthdate" asp-for="@Model.BirthDate" />

    <br />

    <label for="hiredate">Hire Date:</label>
    <input type="date" name="hiredate" asp-for="@Model.HireDate" />

    <br />

    <label for="jobtitle">Job Title:</label>
    <input type="text" name="jobtitle" value="@Model.JobTitle" />

    <br />

    <label for="salary">Salary:</label>
    <input type="number" name="salary" value="@Model.Salary" />

    <br />

    <input type="submit" value="Add Employee" />
</form>

<h3 style="color:red">@Model.ErrorMessage</h3>