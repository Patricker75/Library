@page
@model Library.Pages.Employees.EditModel
@{
}

<form method="post">
    <label for="firstname">First Name:</label>
    <input type="text" name="firstname" value="@Model.Employee.FirstName" />

    <br />

    <label for="middleinitial">Middle Name:</label>
    <input type="text" name="middleinitial" value="@Model.Employee.MiddleName" />

    <br />

    <label for="lastname">Last Name:</label>
    <input type="text" name="lastname" value="@Model.Employee.LastName" />

    <br />

    <label for="phonenumber">Phone Number:</label>
    <input type="tel" name="phonenumber" value="@Model.Employee.PhoneNum">

    <br />

    <label for="address">Address:</label>
    <input type="text" name="address" value="@Model.Employee.Address" />

    <br />

    <label for="gender">Gender:</label>
    <select name="gender" asp-for="@Model.Employee.Gender">
        <option value="0">Male</option>
        <option value="1">Female</option>
        <option value="2">Other</option>
    </select>

    <br />

    <label for="birthdate">Birth Date:</label>
    <input type="date" name="birthdate" asp-for="@Model.Employee.BirthDate" />

    <br />

    <label for="hiredate">Hire Date:</label>
    <input type="date" name="hiredate" asp-for="@Model.Employee.HireDate" />

    <br />

    <label for="jobtitle">Job Title:</label>
    <input type="text" name="jobtitle" value="@Model.Employee.JobTitle" />

    <br />

    <label for="salary">Salary:</label>
    <input type="number" name="salary" value="@Model.Employee.Salary" />

    <br />

    <input type="submit" value="Add Employee" />
</form>

<h3 style="color:red">@Model.ErrorMessage</h3>