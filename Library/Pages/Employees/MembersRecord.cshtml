@page
@model Library.Pages.Employees.MembersRecordModel
@{
    @using Library.Data;
}

<form method="post">
    @for (int i = 0; i < Model.CheckTypes.Length; i++)
    {
        <label for="@Model.CheckTypes[i]">@Model.Types[i]:</label>
        <input asp-for="@Model.CheckTypes[i]" />

        <br />
    }

    <label for="@Model.CheckSuspended">Include Suspended Members:</label>
    <input asp-for="@Model.CheckSuspended" />

    <br />

    <input type="submit" value="Generate Report" />
</form>
