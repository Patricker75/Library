@page
@model Library.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Login.Username" class="control-label">Username:</label>
        <input asp-for="Login.Username" class="form-control"/>
        <span asp-validation-for="Login.Username" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Login.Password" class="control-label">Password:</label>
        <input asp-for="Login.Password" class="form-control"/>
        <span asp-validation-for="Login.Password" class="text-danger"></span>
    </div>

    <h4 class="text-danger">@Model.Message</h4>

    <br />

    <input type="submit" value="Log In" class="btn btn-primary"/>
</form>

<a asp-page="/Members/Add">Not a Member? Join Now</a>