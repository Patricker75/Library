@page
@model Library.Pages.Services.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Services[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Services[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Services[0].IsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int? memberID = null;
            if (Model.HttpContext.Session.GetString("loginType") == "member")
            {
                memberID = Model.HttpContext.Session.GetInt32("loginID");
            }
            foreach (var item in Model.Services) 
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAvailable)
                    </td>

                @if (memberID != null)
                {
                    <td>
                        <form asp-asp-page-handler="Use">
                            <input type="hidden" name="memberID" value="@memberID" />
                            <input type="hidden" name="serviceID" value="@item.ID" />
                            <input type="submit" value="Use Service" />
                        </form>
                    </td>
                }

                </tr>
            }
        }
    </tbody>
</table>
