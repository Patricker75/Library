@page
@model Library.Pages.Devices.CreateModel

@{
    ViewData["Title"] = "Create";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<h1>Device Creation</h1>
<hr />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label for="type">Device</label>
        <select name="type" asp-for="@Model.ItemType">
            <option selected="selected" hidden="hidden">Select device to add</option>
            <option value="0">Macbook</option>
            <option value="1">Windows Laptop</option>
            <option value="2">Audio Book</option>
            <option value="3">E-Reader</option>
            <option value="4">Calculator</option>
        </select>
               
        <br />
        <label for="name">Name of device:</label>
        <input type="text" id="name" name="name" value="@Model.Name"/>

        <br />
        <label for="condition">Conditon</label>
        <select name="condition" asp-for="@Model.Condition">
            <option selected="selected" hidden="hidden">Select A Condition</option>
            <option value="0">New</option>
            <option value="1">Slight</option>
            <option value="2">Damaged</option>
            <option value="3">Needs Repair</option>
        </select>
        
        <br />
        <input type="submit" value="Create" class="btn btn-primary" />
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

<h3 style="color:red">@Model.ErrorMessage</h3>