@page
@model Library.Pages.Devices.CreateModel
@using Library.Data;
@{
    ViewData["Title"] = "Add New Device";
}


<h1>Device Creation</h1>
<hr />
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Device.Type" class="control-label">Device Type:</label>
        <select asp-for="Device.Type" asp-items="Html.GetEnumSelectList<DeviceType>()">
            <option hidden="hidden" selected="selected">Select A Device Type</option>
        </select>
        <span asp-validation-for="Device.Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Device.Name" class="control-label">Name:</label>
        <input asp-for="Device.Name" />
        <span asp-validation-for="Device.Name" class="text-danger"></span>
    </div>
        
    <br />
    
    <input type="submit" value="Create" class="btn btn-primary" />
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>