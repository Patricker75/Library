@page
@model Library.Pages.Devices.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<h2 style="color:red">@Model.Message</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Device[0].ItemType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Device[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Device[0].Condition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int? memberID = null;
            if (Model.HttpContext.Session.GetString("loginType") == "member")
            {
                memberID = Model.HttpContext.Session.GetInt32("loginID");
            }
            foreach (var item in Model.Device) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Condition)
                    </td>

                    @if (memberID != null) {
                        <td>
                            <form method="post" asp-page-handler="Borrow">
                                <input type="hidden" name="memberID" value="@memberID" />
                                <input type="hidden" name="deviceID" value="@item.ID" />
                                <input type="submit" value="Borrow"/>
                            </form>
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>
